{
	"name": "telegraf-typescript",
	"version": "0.0.1",
	"description": "A clean template to build Telegram bots using Telegraf.js and TypeScript in Node.js",
	"main": "dist/app.js",
	"repository": "git@github.com:redcodemohammed/telegraf-typescript.git",
	"author": "redcodemohammed",
	"license": "MIT",
	"dependencies": {
		"telegraf": "^3.38.0"
	},
	"devDependencies": {
		"@types/node": "^14.6.0",
		"nodemon": "^2.0.4",
		"ts-node": "^9.0.0",
		"typescript": "^4.0.2"
	},
	"scripts": {
		"start": "tsc && node dist/app.js",
		"dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/app.ts",
		"build": "tsc"
	}
}
